html,body{height:100%;margin:0}body{display:flex;flex-direction:column;min-height:100vh;background-color:#f5f4ec;color:#302a28}#content a{color:#302a28;font-weight:400;text-decoration:underline dotted;text-underline-offset:.2em;text-decoration-color:#302a28}#content a *{color:#a08679}#content a:hover{text-decoration:underline dotted;color:#a08679}#footer a,.nav-link,.navbar-brand{color:#302a28;text-decoration:underline}#footer a *,.nav-link *,.navbar-brand *{color:#302a28}#footer a:hover,.nav-link:hover,.navbar-brand:hover{color:#a08679;text-decoration:underline}#content table td,#content table th{border:1px solid #ccc;padding:6px 12px;text-align:left}*{font-family:Barlow,sans-serif;font-size:12pt;line-height:1.1;font-weight:400}@media screen and (max-width:480px){*{font-size:10pt}}.container{max-width:750px}.navbar-brand{font-weight:0;letter-spacing:.01em;font-family:Geist;padding-bottom:.5rem;text-decoration:none}.nav-link{font-weight:400;font-family:Geist;font-size:medium;text-decoration:none}.post-metadata{display:block;margin:.1rem;padding:.01rem;color:#666}.date{font-weight:200}.tags{display:flex;flex-direction:row;gap:.04rem;text-decoration:none}.tag{background-color:#a08679;border-radius:4px;padding:.1rem .4rem;color:#fff!important;font-weight:300;font-size:.8rem;text-decoration:none}#content{flex:1 0 auto}#content p{margin-bottom:.5rem;font-weight:300}#content h1,#content h2,#content h3,#content h4,#content h5,#content h6{font-family:Geist,serif;font-weight:500;color:#302a28;letter-spacing:.0001em;margin:2rem 0 .5rem}#content h1{font-size:1.7rem}#content h2{font-size:1.6rem}#content h3{font-size:1.5rem}#content h4{font-size:1.4rem}#content img{display:block;margin:2rem auto;max-width:100%}#content img+em{display:block;text-align:left;font-size:.8rem;color:#666;margin-top:-1.8rem;margin-bottom:1.8rem}#content .avatar>img{border-radius:50%;float:right;margin:-8px 0 0 16px;height:90px;width:90px}#content ol{counter-reset:list;list-style:none;padding-left:0}#content ol>li{display:table-row}#content ol>li:before{content:"[" counter(list,decimal)"] ";counter-increment:list;display:table-cell;text-align:right;padding-right:.5em}#content .container>ol,#content .footnotes>ol{padding-left:0}#content ul{list-style:inside;padding-left:2rem}#content ul>li{list-style-position:outside;margin-left:1em}#content .container>ul,#content .footnotes>ul{padding-left:0}#content table{margin:2rem auto;width:100%}#content table th{font-weight:700}#content table tr:nth-child(2n){background-color:#f8f8f8}#content blockquote{border-left:4px solid;font-style:italic;margin:2rem 0;padding:8px}#content code{color:#302a28;background-color:#f8f8f8;border:1px solid #ccc;border-radius:10%;padding:4px}#content pre code{all:unset}#content .highlight{margin:2rem auto}#content .highlight>pre{padding:8px}